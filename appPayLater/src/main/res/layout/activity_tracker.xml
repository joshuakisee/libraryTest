<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.TrackerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_check_circle_24"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="8dp"
                android:layout_marginLeft="8dp"
                android:text="Order placed"/>
        </LinearLayout>

        <View
            android:visibility="gone"
            android:id="@+id/fulfilled_success"
            android:layout_width="6dp"
            android:layout_height="50dp"
            android:layout_marginLeft="8dp"
            android:background="@color/green_light"/>
        <View
            android:id="@+id/fulfilled_failed"
            android:layout_width="6dp"
            android:layout_height="50dp"
            android:layout_marginLeft="8dp"
            android:background="@color/dark_grey"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:visibility="gone"
                android:id="@+id/shipped_success_tick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_check_circle_24"/>
            <ImageView
                android:id="@+id/shipped_failed_tick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_check_circle_24"
                app:tint="@color/dark_grey" />
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="8dp"
                android:layout_marginLeft="8dp"
                android:text="Awaiting fulfillment"/>
        </LinearLayout>

        <View
            android:visibility="gone"
            android:id="@+id/shipped_success"
            android:layout_width="6dp"
            android:layout_height="50dp"
            android:layout_marginLeft="8dp"
            android:background="@color/green_light"/>
        <View
            android:id="@+id/shipped_failed"
            android:layout_width="6dp"
            android:layout_height="50dp"
            android:layout_marginLeft="8dp"
            android:background="@color/dark_grey"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:visibility="gone"
                android:id="@+id/transit_success_tick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_check_circle_24"/>
            <ImageView
                android:id="@+id/transit_failed_tick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_check_circle_24"
                app:tint="@color/dark_grey" />
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="8dp"
                android:layout_marginLeft="8dp"
                android:text="Shipped"/>
        </LinearLayout>

        <View
            android:visibility="gone"
            android:id="@+id/transit_success"
            android:layout_width="6dp"
            android:layout_height="50dp"
            android:layout_marginLeft="8dp"
            android:background="@color/green_light"/>
        <View
            android:id="@+id/transit_failed"
            android:layout_width="6dp"
            android:layout_height="50dp"
            android:layout_marginLeft="8dp"
            android:background="@color/dark_grey"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:visibility="gone"
                android:id="@+id/delivered_success_tick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_check_circle_24"/>
            <ImageView
                android:id="@+id/delivered_failed_tick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_check_circle_24"
                app:tint="@color/dark_grey" />
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="8dp"
                android:layout_marginLeft="8dp"
                android:text="On-transit"/>
        </LinearLayout>

        <View
            android:visibility="gone"
            android:id="@+id/delivered_success"
            android:layout_width="6dp"
            android:layout_height="50dp"
            android:layout_marginLeft="8dp"
            android:background="@color/green_light"/>
        <View
            android:id="@+id/delivered_failed"
            android:layout_width="6dp"
            android:layout_height="50dp"
            android:layout_marginLeft="8dp"
            android:background="@color/dark_grey"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:visibility="gone"
                android:id="@+id/success_tick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_check_circle_24"/>
            <ImageView
                android:id="@+id/failed_tick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_check_circle_24"
                app:tint="@color/dark_grey" />
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="8dp"
                android:layout_marginLeft="8dp"
                android:text="Delivered"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>